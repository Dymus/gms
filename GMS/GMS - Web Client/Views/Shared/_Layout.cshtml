<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container" style="margin-bottom:10px">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">GMS</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav">
                    <li class="nav-item nav-link active">@Html.ActionLink("Home", "Index", "Home") <span class="sr-only">(current)</span></li>
                    <li class="nav-item nav-link">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (HttpContext.Current.Session["Username"] == null)
                    {
                    <li class="nav-item nav-link">@Html.ActionLink("Log In", "LogIn", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Sign Up", "SignUp", "Home")</li>
                    }
                    else
                    {
                    <li class="nav-item nav-link">@Html.ActionLink("Log Out", "LogOut", "Home")</li>
                    }
                </ul>
            </div>
        </nav>
    </div>
    <div class="container body-content">

        <div class="col-md-10">
            <h2 class="text-danger">@ViewBag.Error</h2>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
