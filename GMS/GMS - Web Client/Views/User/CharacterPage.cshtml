
@{
    ViewBag.Title = "CharacterPage";
}

@Scripts.Render("~/bundles/jquery")
<script src="~/JavaScript/user.js"></script>

<h2>@ViewBag.Character</h2>

<div class="container">

</div>
<div class="row">
    <div class="col-8 list-group" id="equipment">

    </div>
    <div class="col-4 list-group" id="details">
        <div class="flex-column align-items-start list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <p class="mb-1" id="race">??</p>
                <small id="level">??</small>
            </div>
            <p class="mb-1" id="profession">??</p>
            <small id="gender">??</small>
        </div>
        <div id="events" style="margin-top:10px;">
            <div class="flex-column align-items-start list-group-item" aria-describedby="linkHelpBlock">
                @if (ViewBag.Guild is null)
                {
                    <img src="@Url.Content("~/Content/images/ezgif.com-gif-maker.gif")" class="rounded mx-auto d-block img-fluid" />
                    <small id="linkHelpBlock" class="form-text text-muted">
                        In order to create and search events, your character needs to represant a guild.
                        When you become a guild representant, it can take a few minutes to process the change
                        in order to display links.
                    </small>
                }
                else
                {
                    <p>@Html.ActionLink("Create new guild event", "CreateEventForm", "Event", new { name = ViewBag.Character }, null)</p>
                    <p>@Html.ActionLink("Find guild events", "SearchEvents", "Event", new { name = ViewBag.Character }, null)</p>
                }
            </div>
        </div>
    </div>

    <div class="toast" data-delay="8000" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; left: 50%; bottom: 15%; transform: translate(-50%, 0px); z-index: 9999;">
        <div class="toast-header">
            <strong class="mr-auto">GMS</strong>
            <small class="text-muted">just now</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Your character details are loading.
        </div>
    </div>
</div>

<script type="text/javascript">
        $(document).ready(function () {
            var character = '@ViewBag.Character';
            var apiToken = '@ViewBag.ApiToken';
            loadCharacter(character, apiToken);
        });
</script>

<script type="text/javascript">
        $(document).ready(function () {
            var character = '@ViewBag.Character';
            var apiToken = '@ViewBag.ApiToken';
            loadEquipmentList(character, apiToken);
        });
</script>

<script>
    $(document).ready(function () {
        $('.toast').toast('show');
    });
</script>